<?xml version="1.0"?>
<config>
    <modules>
        <Tatva_Editorder>
            <version>0.1.0</version>
        </Tatva_Editorder>
    </modules>
    <frontend>
        <routers>
            <editorder>
                <use>standard</use>
                <args>
                    <module>Tatva_Editorder</module>
                    <frontName>editorder</frontName>
                </args>
            </editorder>
        </routers>
        <layout>
            <updates>
                <editorder>
                    <file>editorder.xml</file>
                </editorder>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<editorder>
				<use>admin</use>
				<args>
					<module>Tatva_Editorder</module>
					<frontName>editorder</frontName>
				</args>
			</editorder>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<editorder module="editorder">
				<title>Editorder</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="editorder">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>editorder/adminhtml_editorder</action>
					</items>
				</children>
			</editorder>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Tatva_Editorder>
							<title>Editorder Module</title>
							<sort_order>10</sort_order>
						</Tatva_Editorder>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<editorder>
					<file>editorder.xml</file>
				</editorder>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <editorder>
                <class>Tatva_Editorder_Model</class>
                <resourceModel>editorder_mysql4</resourceModel>
            </editorder>
            <editorder_mysql4>
                <class>Tatva_Editorder_Model_Mysql4</class>
                <entities>
                    <editorder>
                        <table>editorder</table>
                    </editorder>
                </entities>
            </editorder_mysql4>
        </models>
        <resources>
            <editorder_setup>
                <setup>
                    <module>Tatva_Editorder</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </editorder_setup>
            <editorder_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </editorder_write>
            <editorder_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </editorder_read>
        </resources>
        <blocks>
            <editorder>
                <class>Tatva_Editorder_Block</class>
            </editorder>
        </blocks>
        <helpers>
            <editorder>
                <class>Tatva_Editorder_Helper</class>
            </editorder>
        </helpers>
    </global>
</config>