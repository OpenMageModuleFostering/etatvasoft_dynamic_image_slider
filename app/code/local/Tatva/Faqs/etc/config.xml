<?xml version="1.0"?>
<config>
    <modules>
        <Tatva_Faqs>
            <version>0.1.0</version>
        </Tatva_Faqs>
    </modules>
    <frontend>
        <routers>
            <faqs>
                <use>standard</use>
                <args>
                    <module>Tatva_Faqs</module>
                    <frontName>faqs</frontName>
                </args>
            </faqs>
        </routers>
        <layout>
            <updates>
                <faqs>
                    <file>faqs.xml</file>
                </faqs>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<faqs>
				<use>admin</use>
				<args>
					<module>Tatva_Faqs</module>
					<frontName>faqs</frontName>
				</args>
			</faqs>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<faqs module="faqs">
				<title>Faqs</title>
				<sort_order>71</sort_order>               
				<children>
					<items module="faqs">
						<title>Manage Items</title>
						<sort_order>0</sort_order>
						<action>faqs/adminhtml_faqs</action>
					</items>
				</children>
			</faqs>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Tatva_Faqs>
							<title>Faqs Module</title>
							<sort_order>10</sort_order>
						</Tatva_Faqs>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<faqs>
					<file>faqs.xml</file>
				</faqs>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <faqs>
                <class>Tatva_Faqs_Model</class>
                <resourceModel>faqs_mysql4</resourceModel>
            </faqs>
            <faqs_mysql4>
                <class>Tatva_Faqs_Model_Mysql4</class>
                <entities>
                    <faqs>
                        <table>faqs</table>
                    </faqs>
                    <faqs_store>
                        <table>faqs_store</table>
                    </faqs_store>
                </entities>
            </faqs_mysql4>
        </models>
        <resources>
            <faqs_setup>
                <setup>
                    <module>Tatva_Faqs</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </faqs_setup>
            <faqs_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </faqs_write>
            <faqs_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </faqs_read>
        </resources>
        <blocks>
            <faqs>
                <class>Tatva_Faqs_Block</class>
            </faqs>
        </blocks>
        <helpers>
            <faqs>
                <class>Tatva_Faqs_Helper</class>
            </faqs>
        </helpers>
    </global>
    <default>
        <faqs>
            <general>
                <heading>Frequently Asked Questions</heading>
                <headingcomment>Check here for answer to some of the more common questions we get form customers everyday. If you have a question and can't find the answer here, please feel free to Contact Us or start Live Chat now.</headingcomment>
                <heading_block>Frequently Asked Questions</heading_block>
                <meta_title>Frequently Asked Questions</meta_title>
                <meta_description>Check out our great collection of Frequently Asked Questions</meta_description>
                <meta_keywords>Frequently,Asked,Questions</meta_keywords>
                <layout>three_columns</layout>
            </general>
        </faqs>
    </default>
</config>